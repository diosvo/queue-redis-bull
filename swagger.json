{
  "swagger": "2.0",
  "info": {
    "description": "The best never rest",
    "version": "1.0.0",
    "title": "Swagger - Redis Queue",
    "contact": {
      "email": "vtmn1212@gmail.com"
    }
  },
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "tags": [
    {
      "name": "photos",
      "description": "Photo information"
    },
    {
      "name": "email",
      "description": "Nodemailer using job queue and redis"
    }
  ],
  "paths": {
    "/photos": {
      "get": {
        "tags": [
          "photos"
        ],
        "summary": "Retrieve list of photos",
        "operationId": "get-photos",
        "description": "The limit of returned photos",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "_start",
            "in": "query",
            "required": false,
            "type": "integer",
            "default": 0
          },
          {
            "name": "_limit",
            "in": "query",
            "required": false,
            "type": "integer",
            "default": 10
          },
          {
            "name": "_sort",
            "in": "query",
            "required": false,
            "type": "string",
            "nullable": true
          },
          {
            "name": "_order",
            "in": "query",
            "required": false,
            "type": "string",
            "enum": [
              "asc",
              "desc"
            ],
            "nullable": true
          },
          {
            "name": "albumId",
            "in": "query",
            "required": false,
            "type": "integer",
            "nullable": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Photo"
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      },
      "post": {
        "tags": [
          "photos"
        ],
        "summary": "Create new photo",
        "description": "Returns a photo information",
        "operationId": "create-new-photo",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Photo object that needs to be added.",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Photo"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/Photo"
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/photos/{id}": {
      "get": {
        "tags": [
          "photos"
        ],
        "summary": "Find photo by ID",
        "description": "Returns a photo information",
        "operationId": "photo-by-id",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of photo to return",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/Photo"
            }
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Can not found photo by ID"
          }
        }
      }
    },
    "/email/send": {
      "post": {
        "tags": [
          "email"
        ],
        "summary": "Send an email",
        "description": "Returns a status code",
        "operationId": "send-an-email",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Email"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/Email"
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    }
  },
  "definitions": {
    "Email": {
      "type": "object",
      "required": [
        "from",
        "to",
        "subject",
        "text",
        "message"
      ],
      "properties": {
        "from": {
          "type": "string"
        },
        "to": {
          "type": "string"
        },
        "subject": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    },
    "Photo": {
      "type": "object",
      "required": [
        "albumId",
        "title"
      ],
      "properties": {
        "albumId": {
          "type": "integer",
          "format": "int64"
        },
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "title": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "thumbnailUrl": {
          "type": "string"
        }
      }
    }
  }
}